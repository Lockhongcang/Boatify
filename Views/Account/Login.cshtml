@model Boatify.Models.ViewModels.LoginViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Đăng nhập";
    ViewData["BodyClass"] = "login-only";
    TempData["FormState"] = "login";
}

<div class="form-box login">
    <form asp-action="Login" method="post">
        <h1>Login</h1>

        <div class="input-box">
            <input asp-for="Email" placeholder="Email"/>
            <i class="bx bxs-user"></i>
        </div>
        <span asp-validation-for="Email" class="text-danger validation-message"></span>

        <div class="input-box">
            <input asp-for="Password" placeholder="Password" type="password"/>
            <i class="bx bxs-lock-alt"></i>
        </div>
        <span asp-validation-for="Password" class="text-danger validation-message"></span>

        <div class="remember-me input-box">
            <input asp-for="RememberMe" type="checkbox" style="width: 18px; height: 18px;" />
            <label asp-for="RememberMe">Ghi nhớ đăng nhập</label>
        </div>

        <div class="forgot-link">
            <a href="#">Forgot password?</a>
        </div>

        <button type="submit" class="btn">Login</button>

        <p>or login with social platforms</p>
        <div class="social-icons">
            <a href="#"><i class="bx bxl-google"></i></a>
            <a href="#"><i class="bx bxl-facebook"></i></a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector("form").addEventListener("submit", e => {
            const form = e.target;
            if (!form.checkValidity()) return;

            const btn = form.querySelector("button[type=submit]");
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang xử lý...';
        });
    </script>
}

